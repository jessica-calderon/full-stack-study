<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="row g-md-2">
        <div class="col-md-10 col-sm-10 col-lg-8 mx-auto">
          <div class="card bg-light border border-dark">
            <div class="card-body">
              <div class="row">

                <form class="new-post-form w-100 mx-2">
                  <h2>Create New Post</h2>
                  <input type="text" name="post-title" class="form-control mt-3 border border-dark" id="post-title"
                    placeholder="&#xf246; Title" style="font-family:Arial, FontAwesome">

              </div>
              <div class="row">
                <label for="post-body" class="form-label"></label>
                <textarea class="form-control mx-2 border border-dark" id="post-text" name="post-text" rows="5"
                  placeholder="Enter your post here" style="font-family:Arial, FontAwesome"></textarea>
              </div>
              <button type="submit" class="mt-2 btn btn-outline-secondary float-right ">Submit <i
                  class="fa-solid fa-plus"></i></button>
              </form>
            </div>
          </div>
          {{#if posts.length}}

          <section>
            <h2 class="mx-auto pt-5">Your Posts</h2>
            {{!-- shows all user created posts --}}
            {{#each posts as |post|}}
            {{> post-info post}}
            <div class="card-link">
              <div class="text-center justify-content-center">
                {{!-- edit post button, takes to edit post page --}}
                <a href="/dashboard/edit/{{post.id}}" class="edit-link link-danger text-danger"><button
                    class="btn styled-btn btn-outline-danger float-right">Edit post <i
                      class="fa-solid fa-pen-to-square"></i></button></a>
              </div>
            </div>
            <br />
            <br />
            {{/each}}
          </section>
          {{/if}}
        </div>

        <div class="col-md-8 col-lg-4  mb-3 mx-auto">
          <div class="card border border-dark chat-box">
            <div class="chat-body my-auto">
              <h5 class="chat-title my-2 p-2 mx-2"><i class="fa-solid fa-comments"></i> Chat with online users</h5>

              <div class="container py-3">

                <div class="row d-flex justify-content-center">
                  <div class="col-lg-12">
                    <!-- chat header -->
                    <div class="card w-100">
                      <div class="card-header d-flex justify-content-between align-items-center p-3"
                        style="border-top: 4px solid #8EA4D2;">
                        <h5 class="mb-0">Messages</h5>
                        <div class="d-flex flex-row align-items-center">
                        </div>
                      </div>
                      <!-- sent/received message container -->

                      <div class="card-body" id="message-container" style="position: relative;">
                        <div data-mdb-perfect-scrollbar="true" style="overflow-y:scroll; height:300px;" scrolling="auto" id="chat-container">
                          <div class="row">
                          <small class="text-muted mx-auto text-center">Chat Now!</small></div>
                        </div>
                        </div>
                        <!-- message input container -->
                        <div class="card-footer w-100 text-muted d-flex justify-content-start align-items-center">
                          <!-- send container -->
                          <div id="send-container" class="input-group mb-0">
                            <input type="text" style="height: 3rem;" id="message-input" class="form-control mr-2 p-1"
                              placeholder="Type message" aria-label="Recipient's username"
                              aria-describedby="button-addon2" />
                            <!-- send button -->
                            <button class="btn btn-secondary" type="submit" id="send-button"
                              style="padding-top: .55rem; ">
                              Send <i class="fa-solid fa-paper-plane"></i>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
            <script src="/javascript/add-post.js"></script>
            <script src="https://cdn.socket.io/4.5.0/socket.io.min.js" integrity="sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k" crossorigin="anonymous"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <script src="/javascript/chat.js"></script>